<table>
  <% (0..3).each do |i| %> 
    <tr class="boggle-row">
      <% @letters[4*i..4*i+3].each_char do |letter| %>
        <td class="boggle-letter" 
            style="transform: rotate(<%=letter_rotation%>)">
          <%= letter %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>

<%= button_to "New game", action: "update" %>
